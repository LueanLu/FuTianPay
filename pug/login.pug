  body
    #app
      //- Navigation
      include navi.pug
      //- Fixed
      include fixed.pug
      //- Main Content
      main#top.main.min-vh-100
        //- Preloader
        include preloader.pug
        //- <section> IndexBanner
        include pageBannerOne.pug
        //- <section> Login
        section#page-login.pb-0.py-lg-5.Login.overflow-hidden
          .container
            .row.justify-content-center.text-center
              .col-lg-7.TitleFormB
                h2.Title {{ $t('Login.Title'/*SIGNIN*/) }}
                .MainTitle {{ $t('Login.MainTitle'/*登入會員*/) }}
            .row
              .col-lg-6.pb-5
                .row.h-100.align-items-start.justify-content-center
                  .col-sm-8.col-md-6.col-lg-10.col-xl-8(data-zanim-trigger="scroll" data-zanim-xs='{"delay":0.5,"animation":"slide-right"}')
                    el-form.LoginForm.text-center.px-4.px-lg-0
                      el-form-item(:label="$t('Login.LabelAccount'/*會員帳號：*/)")
                        el-input(type="text", v-model="loginForm.Account", :placeholder="$t('Login.InputAccount'/*請輸入帳號*/)")
                      el-form-item(:label="$t('Login.LabelPassword'/*密碼：*/)")
                        el-input(type="password", v-model="loginForm.Password", :placeholder="$t('Login.InputPassword'/*請輸入密碼*/)")
                      .OtherLinkForm.d-flex.flex-row.justify-content-center.align-items-center
                        a.OtherLink(href='register.html') {{ $t('Login.NoAccount'/*沒有帳號？請註冊*/) }}
                        a.OtherLink(href='forget.html') {{ $t('Login.Forget'/*忘記密碼*/) }}
                      el-button.BtnRed(type="submit") {{ $t('Btn.Login'/*登入*/) }}
              .col-lg-6.px-0
                .sticky-top.vh-lg-100.py-9
                  .bg-holder(style="background-image:url(assets/img/banner/LoginBanner.jpg);" data-zanim-trigger="scroll" data-zanim-lg='{"animation":"slide-left","delay":0.4}')
        //- <section> Company
        include company.pug
      //- Footer Copyright
      include footer.pug
