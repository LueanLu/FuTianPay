section#page-Catalogue.py-lg-5.py-5.Catalogue.overflow-hidden
  .container
    .row.justify-content-center.text-center
      .col-lg-7.TitleFormB
        h2.Title {{ $t('Catalogue.Title'/*CATALOGUE*/) }}
        .MainTitle {{ $t('Catalogue.MainTitle'/*歷年作品*/) }}
    .row.justify-content-center.text-center.pt-4
      .col-md-6.col-lg-12
        .categories
          ul.cat
            li
              ol.type
                li
                  a(href="#" data-filter=".make") {{ $t('Catalogue.Production'/*製作*/) }}
                li
                  a(href="#" data-filter=".publication") {{ $t('Catalogue.Distribution'/*發行*/) }}
                li
                  a(href="#" data-filter=".sales") {{ $t('Catalogue.Sales'/*銷售*/) }}
          .clearfix
        .row
          .portfolioItems.w-100
            .col-sm-6.col-md-3.col-lg-3(v-for='(item, index) in catalogueData' :key='index' :class='item.BusinessType')
              .portfolio-item
                .hover-bg
                  a(v-if="item.Youtube" :href="item.Youtube" rel="prettyPhoto")
                    .hover-text
                      h4 {{ item.Title }}
                      small {{ item.Business }}
                      .clearfix
                      i.fa.fa-plus
                    img.img-responsive(:src='item.Img' :alt='item.ImgAlt')
                  a(v-else)
                    .hover-text
                      h4 {{ item.Title }}
                      small {{ item.Business }}
                      .clearfix
                      i.fa.fa-plus
                    img.img-responsive(:src='item.Img' :alt='item.ImgAlt')
