        .col-lg-4.mt-lg-4
          el-form-item(label='')
            el-input.IndexContactTextarea(type="textarea", v-model="contact.Content", :placeholder="$t('IndexContact.InputMsg'/*您的訊息*/)", :rows="7", :autosize="{ minRows: 7, maxRows: 7}", maxlength="300", show-word-limit)
