  body
    #app
      //- Navigation
      include navi.pug
      //- Fixed
      include fixed.pug
      //- Main Content
      main#top.main.min-vh-100
        //- Preloader
        include preloader.pug
        //- <section> IndexBanner
        include pageBannerFour.pug
        //- <section> CartList
        section#page-cart.py-lg-5.Cart.overflow-hidden
          .container
            .row.justify-content-center.text-center
              .col-lg-7.TitleFormB
                h2.Title {{ $t('Cart.Title'/*YOUR CART*/) }}
                .MainTitle {{ $t('Cart.MainTitle'/*購物車列表*/) }}

            //- CartList Content
            .row.py-3
              .col
                a.btn.btn-link.px-0.text-secondary(href="shop.html")
                  span.fas.fa-chevron-left(data-fa-transform="down-1")
                  span.pl-2 {{ $t('Cart.BackShop'/*Back To Shop*/) }}
            //- -------------------- PC版面 --------------------
            .row.d-lg-block.d-none
              .col-12
                //- 項目
                .row.CartListItem.d-flex.flex-row.py-3
                  .col-2.text-center
                    .CartListItemName {{ $t('Cart.GoodsImg'/*商品圖*/) }}
                  .col-4.text-center
                    .CartListItemName {{ $t('Cart.GoodsName'/*商品名稱*/) }}
                  .col-2.text-center
                    .CartListItemName {{ $t('Cart.GoodsAmount'/*數量*/) }}
                  .col-2.text-center
                    .CartListItemName {{ $t('Cart.Amount'/*金額*/) }}
                  .col-2.text-center
                    .CartListItemName {{ $t('Cart.DeleteGoods'/*刪除商品*/) }}
                //- 購物車列表
                .row.CartList.d-flex.flex-row.justify-content-center.align-items-center.py-3.text-center
                  .col-2
                    .CartListImg.overflow-hidden.d-flex.justify-content-center.align-items-center.mr-3
                      img.w-100.h-auto(src="assets/img/cartImg/01.png" alt="" width="50")
                  .col-4
                    span DemoProduct
                  .col-2
                    el-form
                      el-form-item(label='')
                        el-select(v-model="goodsAmount", placeholder="0", clearable)
                          el-option(value='1', label="1")
                          el-option(value='2', label="2")
                          el-option(value='3', label="3")
                          el-option(value='4', label="4")
                  .col-2
                    h6.fs-0.font-weight-normal.mb-0.TextR $500.00
                  .col-2
                    el-button.BtnBlue(type="submit", @click="deleteCart") {{ $t('Btn.Delete'/*刪除*/) }}
                .row.CartList.d-flex.flex-row.justify-content-center.align-items-center.py-3.text-center
                  .col-2
                    .CartListImg.overflow-hidden.d-flex.justify-content-center.align-items-center.mr-3
                      img.w-100.h-auto(src="assets/img/cartImg/01.png" alt="" width="50")
                  .col-4
                    span DemoProduct
                  .col-2
                    el-form
                      el-form-item(label='')
                        el-select(v-model="goodsAmount", placeholder="0", clearable)
                          el-option(value='1', label="1")
                          el-option(value='2', label="2")
                          el-option(value='3', label="3")
                          el-option(value='4', label="4")
                  .col-2
                    h6.fs-0.font-weight-normal.mb-0.TextR $500.00
                  .col-2
                    el-button.BtnBlue(type="submit", @click="deleteCart") {{ $t('Btn.Delete'/*刪除*/) }}
            //- -------------------- PC版面 End --------------------

            //- -------------------- Mobile版面 --------------------
            .row.d-lg-none
              .col-12
                //- 購物車列表
                .row.CartList.d-flex.flex-column.justify-content-center.align-items-center.py-3.text-center
                  .col-12
                    .row.d-flex.flex-row.align-items-center
                      .col-4
                        .CartListImg.overflow-hidden.d-flex.justify-content-center.align-items-center
                          img.w-100.h-auto(src="assets/img/cartImg/01.png" alt="" width="50")
                      .col-8
                        .row
                          .col-12.d-flex.flex-row.align-items-center.py-1
                            .CartListTitle.text-right {{ $t('Cart.GoodsName'/*商品名稱*/) }}：
                            span DemoProduct
                          .col-12.d-flex.flex-row.align-items-center.py-1
                            .CartListTitle.text-right {{ $t('Cart.GoodsAmount'/*數量*/) }}：
                            el-form.pr-5
                              el-form-item(label="")
                                el-select(v-model="goodsAmount", placeholder="0", clearable)
                                  el-option(value='1', label="1")
                                  el-option(value='2', label="2")
                                  el-option(value='3', label="3")
                                  el-option(value='4', label="4")
                          .col-12.d-flex.flex-row.align-items-center.py-1
                            .CartListTitle.text-right {{ $t('Cart.Amount'/*金額*/) }}： 
                            h6.fs-0.font-weight-normal.mb-0.TextR $500.00
                  .col-12.pt-3
                    el-button.BtnBlue(type="submit", @click="deleteCart") {{ $t('Btn.Delete'/*刪除*/) }}
                .row.CartList.d-flex.flex-column.justify-content-center.align-items-center.py-3.text-center
                    .col-12
                      .row.d-flex.flex-row.align-items-center
                        .col-4
                          .CartListImg.overflow-hidden.d-flex.justify-content-center.align-items-center
                            img.w-100.h-auto(src="assets/img/cartImg/01.png" alt="" width="50")
                        .col-8
                          .row
                            .col-12.d-flex.flex-row.align-items-center.py-1
                              .CartListTitle.text-right {{ $t('Cart.GoodsName'/*商品名稱*/) }}：
                              span DemoProduct
                            .col-12.d-flex.flex-row.align-items-center.py-1
                              .CartListTitle.text-right {{ $t('Cart.GoodsAmount'/*數量*/) }}：
                              el-form.pr-5
                                el-form-item(label="")
                                  el-select(v-model="goodsAmount", placeholder="0", clearable)
                                    el-option(value='1', label="1")
                                    el-option(value='2', label="2")
                                    el-option(value='3', label="3")
                                    el-option(value='4', label="4")
                            .col-12.d-flex.flex-row.align-items-center.py-1
                              .CartListTitle.text-right {{ $t('Cart.Amount'/*金額*/) }}： 
                              h6.fs-0.font-weight-normal.mb-0.TextR $500.00
                    .col-12.pt-3
                      el-button.BtnBlue(type="submit", @click="deleteCart") {{ $t('Btn.Delete'/*刪除*/) }}
            //- -------------------- Mobile版面 End --------------------

            .row.justify-content-end.text-lg-right.text-center.mt-4
              .col-12(data-zanim-timeline='{"delay":0.1}' data-zanim-trigger="scroll")
                .row.justify-content-end.mt-2
                  .col-12(data-zanim-xs='{"delay":0.1}')
                    span {{ $t('Cart.TotalAmount'/*購買總金額：*/) }}
                    span.TextR $495.00
                .row.justify-content-end.mt-4
                  .col-12
                    el-button.BtnRed(type="submit", @click="addCart", data-zanim-xs='{"delay":0.2}') {{ $t('Btn.Checkout'/*結帳*/) }}

        //- <section> Advertising
        include advertising.pug
        //- <section> Company
        include company.pug
